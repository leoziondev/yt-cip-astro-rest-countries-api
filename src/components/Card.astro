---
import { Image } from "astro:assets";

type Props = {
    name: string
    image: string
    pop: number
    region: string
    capital: string
    link: string
    cioc: string
}

const { name, image, pop, region, capital, link, cioc, ...rest } = Astro.props
---

<article class="bg-theme-elements rounded-md shadow-sm overflow-hidden" {...rest}>
    <a href={link}>
        <Image
            src={image}
            width={400}
            height={225}
            alt={`${name} flag`}
            transition:name={image}
            class="aspect-video object-cover"
        />
        <div class="p-6">
            <h2 class="font-bold text-xl" transition:name={cioc}>{name}</h2>
            <div class="text-sm text-theme-text mt-4">
                <p><strong>Population: </strong> {pop.toLocaleString(undefined)}</p>
                <p><strong>Region: </strong>{region}</p>
                <p><strong>Capital: </strong>{capital}</p>
            </div>
        </div>
    </a>
</article>