---
import { ThemeSwitch } from "astro-color-scheme"

import MoonIcon from "./MoonIcon.astro"
import SunIcon from "./SunIcon.astro";
---

<header class="bg-theme-elements shadow-sm" transition:persist>
    <div class="flex justify-between max-w-7xl mx-auto py-6 px-4">
        <a href="/"><h1 class="font-bold text-xl text-theme-text">Where in the world?</h1></a>
        <ThemeSwitch strategy="button">
            <button class="flex items-center gap-3 text-sm">
                <MoonIcon customClass="w-5 h-5  dark:hidden" />   
                <SunIcon customClass="w-5 h-5 hidden dark:block" />           
                <span class="dark:hidden">Dark Mode</span>
                <span class="hidden dark:block">Light Mode</span>
            </button>
        </ThemeSwitch>
    </div>
</header>